<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/redirectToDetallebtn" android:onClick="redirectToDetalle">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/label"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/label" android:id="@+id/relativeLayout">
        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/next_button"
                android:text="@string/next_button_text"
                android:onClick="buttonPressed"/>

        <Button
                android:text="Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="441dp"
                android:id="@+id/weightBtn" android:onClick="redirectToWeight" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="160dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.987"/>
    </RelativeLayout>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="441dp"
            android:id="@+id/button" android:onClick="redirectToDetalle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.987"
            tools:ignore="MissingConstraints"/>



</androidx.constraintlayout.widget.ConstraintLayout>