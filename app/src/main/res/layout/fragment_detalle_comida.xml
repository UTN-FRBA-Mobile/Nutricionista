<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:id="@+id/itemDetalleComidaList" android:padding="10dp">
    <com.google.android.material.card.MaterialCardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            style="@style/Widget.MaterialComponents.CardView"
            android:id="@+id/card_view_dieta"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:id="@+id/statusComidaIcon"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/detalleItemTxt" android:textSize="20sp"
                android:paddingStart="20dp" android:paddingEnd="10dp" android:paddingTop="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
